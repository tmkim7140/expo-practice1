{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": [
      "es2017"
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "@Navigation/*": [
        "src/navigation/*"
      ],
      "@Components/*": [
        "src/components/*"
      ],
      "@Screens/*": [
        "src/screens/*"
      ],
      "@Queries/*": [
        "src/queries/*"
      ],
      "@Stores/*": [
        "src/stores/*"
      ],
      "@Assets/*": [
        "assets/*"
      ],
      "@/*": [
        "./*"
      ]
    },
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
}